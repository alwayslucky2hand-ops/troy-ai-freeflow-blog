        // æ¨¡æ“¬ç™»å‡ºï¼šæ¸…ç©ºå‰ç«¯è®Šæ•¸
        function logout() {
            currentUser = { email: '', password: '' };
            document.getElementById('email').value = '';
            document.getElementById('password').value = '';
            document.getElementById('login-status').innerText = 'ç›®å‰ç‹€æ…‹ï¼šæœªç™»å…¥';
            alert('å·²ç™»å‡ºï¼');
