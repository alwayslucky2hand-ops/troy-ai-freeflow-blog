        // æ¨¡æ“¬ç™»å…¥ï¼šæŠŠå¸³è™Ÿå¯†ç¢¼å­˜åœ¨å‰ç«¯è®Šæ•¸ä¸­
        function login() {
            const emailInput = document.getElementById('email').value;
            const passInput = document.getElementById('password').value;
            if (emailInput && passInput) {
                currentUser = { email: emailInput, password: passInput };
                document.getElementById('login-status').innerText = `ç›®å‰ç‹€æ…‹ï¼šå·²ç™»å…¥ (${emailInput})`;
                alert('ç™»å…¥è³‡è¨Šå·²è¨˜éŒ„ï¼ç¾åœ¨å¯ä»¥å˜—è©¦è§£é–æœƒå“¡æ–‡ç« äº†ã€‚');
