        // å‘¼å« APIï¼šç²å–æ–‡ç« åˆ—è¡¨
        async function fetchPosts() {
            try {
                // ç™¼é€ GET è«‹æ±‚åˆ° GAS
                const response = await fetch(`${API_URL}?action=getPosts`);
                const posts = await response.json();
                
                const listContainer = document.getElementById('post-list');
                listContainer.innerHTML = ''; // æ¸…ç©ºè¼‰å…¥ä¸­æ–‡å­—
                document.getElementById('loading-list').style.display = 'none';

                // å°‡æ¯ç¯‡æ–‡ç« ç”¢ç”Ÿå°æ‡‰çš„ HTML
                posts.forEach(post => {
                    const tag = post.isPremium ? '<span class="premium-tag">ğŸ”’ æœƒå“¡é™å®š</span>' : '<span class="premium-tag" style="background:#28a745; color:white;">ğŸ“– å…¬é–‹</span>';
                    
                    const postHTML = `
                        <div class="post-item">
                            <div>
                                <strong>${post.title}</strong> ${tag}
                            </div>
                            <button onclick="readPost(${post.id})">é–±è®€æ–‡ç« </button>
                        </div>
                    `;
                    listContainer.innerHTML += postHTML;
                });
            } catch (error) {
                console.error('ç²å–æ–‡ç« åˆ—è¡¨å¤±æ•—:', error);
                document.getElementById('loading-list').innerText = 'è¼‰å…¥å¤±æ•—ï¼Œè«‹æª¢æŸ¥ API ç¶²å€æ˜¯å¦æ­£ç¢ºã€‚';
            }
