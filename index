            document.getElementById('detail-title').innerText = 'è¼‰å…¥ä¸­...';
            document.getElementById('detail-content').innerText = 'æ­£åœ¨å‘ä¼ºæœå™¨è«‹æ±‚å…§å®¹...';

            try {
                // å°‡æ–‡ç« IDã€ä»¥åŠç›®å‰çš„å¸³è™Ÿå¯†ç¢¼ä¸€èµ·é€åˆ°å¾Œç«¯é©—è­‰
                const url = `${API_URL}?action=getPostContent&id=${id}&email=${currentUser.email}&password=${currentUser.password}`;
                const response = await fetch(url);
                const data = await response.json();

                // å°‡å¾Œç«¯å›å‚³çš„çµæœé¡¯ç¤ºåœ¨ç•«é¢ä¸Š
                document.getElementById('detail-title').innerText = data.title;

                if (data.error) {
                    // å¦‚æœæœ‰éŒ¯èª¤ (ä¾‹å¦‚å¯†ç¢¼éŒ¯èª¤æˆ–æœªç™»å…¥)ï¼Œé¡¯ç¤ºéŒ¯èª¤è¨Šæ¯
                    document.getElementById('detail-content').innerHTML = `<p style="color:red; font-weight:bold;">âŒ ${data.error}</p>`;
                } else {
                    // å¦‚æœæˆåŠŸè§£é–ï¼Œé¡¯ç¤ºå®Œæ•´å…§å®¹
                    document.getElementById('detail-content').innerHTML = data.content;
                }

            } catch (error) {
                console.error('ç²å–æ–‡ç« å…§å®¹å¤±æ•—:', error);
                document.getElementById('detail-content').innerText = 'è¼‰å…¥å¤±æ•—ã€‚';
